<Window x:Class="SimpleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Простая бродилка" Height="600" Width="800"
        KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="LightBlue">
            <!-- Игрок -->
            <Rectangle x:Name="Player" Fill="Red" Width="30" Height="30" 
                      Canvas.Left="50" Canvas.Top="50"/>
            
            <!-- Стены -->
            <Rectangle x:Name="Wall1" Fill="Gray" Width="200" Height="20" 
                      Canvas.Left="100" Canvas.Top="100"/>
            <Rectangle x:Name="Wall2" Fill="Gray" Width="20" Height="150" 
                      Canvas.Left="300" Canvas.Top="200"/>
            <Rectangle x:Name="Wall3" Fill="Gray" Width="150" Height="20" 
                      Canvas.Left="400" Canvas.Top="350"/>
            
            <!-- Выход -->
            <Rectangle x:Name="Exit" Fill="Green" Width="40" Height="40" 
                      Canvas.Left="700" Canvas.Top="500"/>
            
            <!-- Текст -->
            <TextBlock x:Name="StatusText" Canvas.Left="10" Canvas.Top="10" 
                      FontSize="16" FontWeight="Bold" Foreground="DarkBlue"/>
        </Canvas>
    </Grid>
</Window>